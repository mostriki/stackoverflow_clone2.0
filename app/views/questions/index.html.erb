
<% @questions.each do |question| %>
  <div class='card'>
    <div class='card-body'>
      <h3>Question:</h3>
      <p><%= link_to question.title, question_path(question) %></p>
      <p>by <%= question.user.user_name %></p>
      <p><% if current_user && current_user.admin %>
      <%= link_to "Delete Question", question_path(question),
        :data=>{:confirm => "Are You Sure?", :method => "delete"}%>
      <% end %></p>
    </div>
  </div>
<% end %>
